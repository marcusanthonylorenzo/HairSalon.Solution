@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Client summary:</h1>

<div class="index" id="home">
  @if (@Model.Count == 0)
  {
    <h3>No clients registered at the moment.</h3>
  } 

  <ul>
    @foreach(Client client in Model)
    {
      @if (@client.StylistId != 0)
      {
      <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</li>
      }
    }
  </ul>

  <p>@Html.ActionLink("Add a new client", "Add")</p>
  <p>@Html.ActionLink("Back to Main Page", "Index", "Home")</p>
</div>